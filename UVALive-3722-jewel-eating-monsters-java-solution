java solution for jewel eating monsters 
Note: v judge not accepting solutions(weird) and uvalive link not working for the problem

import java.util.Scanner;

public class JewelEatingMonsters {
    public static long binaryExpIterative(long a, long b, int M) {
        long ans = 1;
        while (b > 0) {
            if (b % 2 == 1) {
                ans = (ans * a) % M;
            }
            a = (a * a) % M;
            b >>= 1;
        }
        return ans;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        long x, alpha, n, c;
        while (true) {
            x = sc.nextLong();
            alpha = sc.nextLong();
            n = sc.nextLong();
            c = sc.nextLong();
            if (x == 0 && alpha == 0 && n == 0 && c == 0) break;
            long res = x;
            for (int i = 0; i < n; i++) {
                res = ((res - 1) * alpha) % c;
            }
            res = (res + c) % c;
            System.out.println(res);
        }
    }
}
